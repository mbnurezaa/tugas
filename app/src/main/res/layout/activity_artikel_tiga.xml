<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DE7292"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:navigationIcon="@drawable/ic_back">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Artikel Kehamilan"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:id="@+id/nestedScrollView2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_conversion_absoluteHeight="677dp"
                tools:layout_conversion_absoluteWidth="411dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="55dp">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Adakah  Cara Pencegahan untuk \nKondisi Hiperemesis Gravidarium?"
                    android:textAlignment="viewStart"
                    android:textColor="#FA6484"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="dr. Gabriella Florencia"
                    android:textColor="#FA6484"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView18" />

                <ImageView
                    android:id="@+id/imgViewSatu"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView18"
                    app:srcCompat="@drawable/artikeldua" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginEnd="43dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Bukan menjadi hal yang mengherankan jika ibu hamil mengalami mual dan muntah di pagi hari, yang dikenal dengan morning sickness. Namun, ada beberapa orang yang mengalaminya secara intens, yang disebut hiperemesis gravidarum. Sebenarnya, apa sih hiperemesis gravidarum itu?"
                    android:textColor="#FA6484"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgViewSatu" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="43dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Saat ibu hamil mengalami hiperemesis gravidarum, ibu sering merasa mual dan muntah, bahkan frekuensinya bisa lebih sering dibandingkan dengan ibu hamil yang mengalami morning sickness normal. Mual dan muntah mengindikasikan kehamilan yang sehat, tetapi tidak jika ibu sering mengalaminya."
                    android:textAlignment="viewStart"
                    android:textColor="#FA6484"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView20" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="43dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Sayangnya, belum ada cara pasti bagaimana pencegahan hiperemesis gravidarum. Ini karena perubahan hormon terjadi secara alami. Namun, beberapa cara ini dapat membantu: \n1. Makan dalam porsi kecil, tetapi sering. Meski mual, ibu tetap harus melakukannya, demi tercukupinya asupan nutrisi sang buah hati. \n2. Hindari semua hal yang memicu stres.
                    \n3. Pilih menu makanan dengan rasa yang hambar. \n4. Tunggu hingga mual mereda, baru mulai makan. \n\nIbu bisa mengonsumsi suplemen zat besi atau vitamin B6 sesuai dengan dosis yang dianjurkan. "
                    android:textAlignment="viewStart"
                    android:textColor="#FA6484"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView21" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>